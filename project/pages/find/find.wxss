/* pages/find/find.wxss */
.coatain{
  width: 100%;
  height: 100%;
  margin: 0;
  padding: 0;
  position: relative;
}
image{
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: -1;
}
.title{
  width: 100%;
  height: 80rpx;
  border-radius: 8px;
  display: block;
  text-align: center;
  line-height: 80rpx;
  color: white;
  text-shadow: #d1d1d1 2rpx 3rpx 6rpx;
}
.form{
  margin-top: 180rpx;
  color: white;
}
label{
   display: flex;
   justify-content: flex-start;
   width: 720rpx;
   margin: 10rpx 0;
   margin-left: 15rpx;
}
label text{
  width: 150rpx;
  display: block;
  line-height: 80rpx;
  font-size: 18px;
}
label input{
  flex: 1;
  padding: 0 0 0 20rpx;
  height: 80rpx;
  outline: dotted 1px rgb(230, 101, 101);
}
.btn {
  width: 300rpx;
  border-radius: 50rpx;
  color: white;
  background-color: red;
  margin:  20rpx auto;
}
.btn:active{
  background-color: #333;
}